<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:subrosa-context="http://www.subrosa.com/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                      http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
            http://www.subrosa.com/schema/context http://www.subrosa.com/schema/context/subrosa-context-1.0.xsd
                      http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd">

    <subrosa-context:property-placeholder name="propertyPlaceholderConfigurer" ignore-resource-not-found="true"
                                       location="classpath:etc/build.properties,
              classpath:subrosa-app.properties,
              file:${external.config.directory:/opt/subrosa/etc}/environment.properties,
              file:${external.config.directory:/opt/subrosa/etc}/secure.properties,
              file:${external.config.directory:/opt/subrosa/etc}/subrosa/subrosa-env.properties,
              file:${external.config.directory:/opt/subrosa/etc}/host.properties"
            />

    <context:component-scan base-package="com.subrosa"/>

    <import resource="subrosa-beans.xml" />
</beans>