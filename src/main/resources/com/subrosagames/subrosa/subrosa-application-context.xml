<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
            http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <context:property-placeholder ignore-resource-not-found="true"
                                  location="classpath:etc/build.properties,
                classpath:com/subrosagames/subrosa/subrosa.properties,
                file:${external.config.directory:/opt/subrosa/etc}/environment.properties,
                file:${external.config.directory:/opt/subrosa/etc}/secure.properties,
                file:${external.config.directory:/opt/subrosa/etc}/subrosa/subrosa-env.properties,
                file:${external.config.directory:/opt/subrosa/etc}/host.properties"
            />

    <context:component-scan base-package="com.subrosagames.subrosa"/>

    <import resource="subrosa-security.xml"/>
    <import resource="subrosa-persistence.xml"/>
    <!--<import resource="subrosa-caching.xml"/>-->
    <import resource="subrosa-scheduling.xml"/>
    <import resource="subrosa-messaging.xml"/>
    <import resource="subrosa-android.xml"/>

  <bean id="customizableTraceInterceptor"
        class="org.springframework.aop.interceptor.CustomizableTraceInterceptor">
    <property name="exitMessage" value="Leaving $[methodName](): $[returnValue]" />
  </bean>
  <mvc:interceptors>
    <bean class="com.subrosagames.subrosa.util.LogResponseBodyInterceptor"/>
  </mvc:interceptors>

  <!--<import resource="subrosa-monitoring.xml"/>-->

</beans>