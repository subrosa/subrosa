<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true">

    <!-- pull in servlet and application context -->
    <import resource="classpath:com/subrosagames/subrosa/api-v1-servlet.xml"/>
    <import resource="classpath:com/subrosagames/subrosa/subrosa-application-context.xml"/>

    <!-- then override with test-specific bean definitions -->
    <import resource="test-persistence-context.xml"/>
    <import resource="test-message-context.xml"/>

</beans>